{
    "name": "modufolio/http",
    "description": "PSR-7 HTTP message implementation with additional utilities",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Maarten Thiebou"
        }
    ],
    "require": {
        "php": "^8.2",
        "psr/http-message": "^2.0",
        "psr/http-factory": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12"
    },
    "autoload": {
        "psr-4": {
            "Modufolio\\Psr7\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Modufolio\\Psr7\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --no-coverage",
        "test:coverage": "php -d xdebug.mode=coverage ./vendor/bin/phpunit --stderr --coverage-html=tests/coverage"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
